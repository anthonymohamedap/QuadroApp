<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:m="using:QuadroApp.Model"
        x:Class="QuadroApp.Views.KlantDialog"
        x:DataType="m:Klant"
        Width="420"
        Height="520"
        CanResize="False"
        Title="Klantgegevens"
        Background="#F5F5F5">

	<Border BorderBrush="#DDD" BorderThickness="1" CornerRadius="10" Background="White" Margin="10">
		<StackPanel Margin="20" Spacing="10">

			<!-- â–‘â–‘ TITEL â–‘â–‘ -->
			<TextBlock Text="Klantgegevens"
					   FontSize="22"
					   FontWeight="Bold"
					   Foreground="#222"
					   Margin="0,0,0,10"/>

			<!-- â–‘â–‘ VELDEN â–‘â–‘ -->
			<TextBox Watermark="Voornaam"   Text="{Binding Voornaam, Mode=TwoWay}"/>
			<TextBox Watermark="Achternaam" Text="{Binding Achternaam, Mode=TwoWay}"/>
			<TextBox Watermark="E-mail"     Text="{Binding Email, Mode=TwoWay}"/>
			<TextBox Watermark="Telefoon"   Text="{Binding Telefoon, Mode=TwoWay}"/>
			<TextBox Watermark="Straat"     Text="{Binding Straat, Mode=TwoWay}"/>
			<TextBox Watermark="Nummer"     Text="{Binding Nummer, Mode=TwoWay}"/>
			<TextBox Watermark="Postcode"   Text="{Binding Postcode, Mode=TwoWay}"/>
			<TextBox Watermark="Gemeente"   Text="{Binding Gemeente, Mode=TwoWay}"/>

			<!-- â–‘â–‘ KNOPPEN â–‘â–‘ -->
			<StackPanel Orientation="Horizontal" Spacing="10" Margin="0,20,0,0" HorizontalAlignment="Right">
				<Button Content="Annuleren"
						Width="110"
						Background="#DDD"
						Foreground="#333"
						CornerRadius="8"
						Click="Annuleren_Click"/>

				<Button Content="ðŸ’¾ Opslaan"
						Width="110"
						Background="#444A50"
						Foreground="White"
						FontWeight="Bold"
						CornerRadius="8"
						Click="Opslaan_Click"/>
			</StackPanel>

		</StackPanel>
	</Border>
</Window>
